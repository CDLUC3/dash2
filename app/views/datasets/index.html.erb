<p id="notice"><%= notice %></p>

<h1>Listing Datasets</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Publicationyear</th>
      <th>Language</th>
      <th>Size</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @datasets.each do |dataset| %>
      <tr>
        <td><%= dataset.Title %></td>
        <td><%= dataset.PublicationYear %></td>
        <td><%= dataset.language %></td>
        <td><%= dataset.size %></td>
        <td><%= link_to 'Show', dataset %></td>
        <td><%= link_to 'Edit', edit_dataset_path(dataset) %></td>
        <td><%= link_to 'Destroy', dataset, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

